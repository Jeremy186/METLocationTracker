@model MapsProposal.Models.Location

@{
    ViewBag.Title = "Delete";
}
<div class="formNoMap">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="dl-horizontal">

            @if (Model.LocationType == MapsProposal.Models.LocationType.Point)
            {
            <dt>
                @Html.DisplayNameFor(model => model.Latitude)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Latitude)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Longitude)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Longitude)
            </dd>
            }
            @if (Model.LocationType == MapsProposal.Models.LocationType.Rectangle)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.NorthEastLatitude)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NorthEastLongitude)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NorthEastLatitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NorthEastLongitude)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.SouthWestLatitude)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.SouthWestLatitude)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.SouthWestLongitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SouthWestLongitude)
                </dd>
            }

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>